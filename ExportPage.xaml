<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appForAccGoods.ExportPage"
             BackgroundColor="#BBBBBB">
    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Шапка (чёрный фон с гамбургер-меню и заголовком) -->
        <Grid Grid.Row="0"
  HeightRequest="50"
  BackgroundColor="#292929"
  Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Иконка "гамбургер" -->
            <Image Source="menu_white.png"
       WidthRequest="24"
       HeightRequest="24"
       VerticalOptions= "Center"
       Grid.Column="0"/>

            <Image Source="camera_mainpage.png"
            WidthRequest="24"
            HeightRequest="24"
            VerticalOptions= "Center"
            Grid.Column="2"
            Margin="0,0,20,0"/>

            <Image Source="search_white.png"
       WidthRequest="24"
       HeightRequest="24"
       VerticalOptions= "Center"
       Grid.Column="3"/>

            <!-- Заголовок "Новый приход" -->
            <Label Text="Новый расход"
       Grid.Column="1"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       TextColor="White"
       FontSize="24"
       FontAttributes="Bold"
       Margin="-15,0,0,0"/>
        </Grid>

        <!-- Оранжевая полоса с кнопкой -->
        <Grid Grid.Row="1"
  HeightRequest="29"
  BackgroundColor="#EC9704"
  Padding="0">
            <Image Source="arrow_down_orange_menu.png"
            WidthRequest="24"
            HeightRequest="24"
            VerticalOptions= "Center"/>
        </Grid>

        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="10">
                <Frame BackgroundColor="#292929"
       CornerRadius="10"
       Padding="10"
       HeightRequest="133"
       HorizontalOptions="FillAndExpand"
       HasShadow="False">

                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                        <!-- Первый текст в левом верхнем углу -->
                        <Label Text="Зеленое яблоко"
               TextColor="White"
               FontSize="16"
               FontAttributes="Bold"
               HorizontalTextAlignment="Start"
               VerticalTextAlignment="Start"
               Grid.Row="0" Grid.Column="0"
                       Margin="0,0,0,0"/>

                        <!-- Второй текст под первым -->
                        <Label Text="Штрих-код: 12345689"
               TextColor="White"
               FontSize="14"
               HorizontalTextAlignment="Start"
               VerticalTextAlignment="Start"
               Grid.Row="1" Grid.Column="0"
                       Margin="0,-40,0,0"/>

                        <!-- Картинка справа -->
                        <Image Source="product_image.png"
               WidthRequest="110"
               HeightRequest="110"
               Aspect="AspectFill"
               Grid.RowSpan="2" Grid.Column="1"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <Frame Grid.Row="2"
   BackgroundColor="#EC9704"
   Padding="10"
   CornerRadius="50"
   WidthRequest="32"
   HeightRequest="32"
   HasShadow="True"
   HorizontalOptions="End"
   VerticalOptions="End"
   Margin="0,0,20,20">
            <Image Source="add_circle.png"
       WidthRequest="24"
       HeightRequest="24"
       VerticalOptions="Center"
       HorizontalOptions="Center"/>
        </Frame>
    </Grid>
</ContentPage>